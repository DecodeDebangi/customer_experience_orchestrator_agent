              "path": ["api", "v1", "agents", "{{agent_id}}", "logs", "range"],
              "query": [
                {"key": "start_date", "value": "2025-11-20"},
                {"key": "end_date", "value": "2025-11-26"},
                {"key": "limit", "value": "100"}
              ]
            },
            "description": "Get logs within a specific date range"
          },
          "response": []
        }
      ]
