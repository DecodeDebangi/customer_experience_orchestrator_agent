        {
          "name": "Send WARNING Event",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{api_key}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agentId\": \"{{agent_id}}\",\n  \"eventType\": \"WARNING\",\n  \"data\": {\n    \"message\": \"High memory usage detected\",\n    \"memory_usage_percent\": 85\n  },\n  \"timestamp\": \"{{$isoTimestamp}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/events",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "events"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. Agent Logs APIs",
      "item": [
        {
          "name": "Get Agent Logs",
