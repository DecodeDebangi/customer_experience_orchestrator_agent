              "raw": "{{base_url}}/api/v1/agents/{{agent_id}}/logs?event_type=INFO&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "agents", "{{agent_id}}", "logs"],
              "query": [
                {"key": "event_type", "value": "INFO"},
