    {
      "name": "4. A2A Communication (Actually Sends Emails!)",
      "item": [
        {
          "name": "Send Email via A2A Bridge",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{api_key}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agentId\": \"{{agent_id}}\",\n  \"targetAgent\": \"notification_agent\",\n  \"action\": \"send_email\",\n  \"payload\": {\n    \"user_email\": \"your.email@example.com\",\n    \"subject\": \"Test Email from Node.js Agent\",\n    \"body\": \"This email was sent via A2A Bridge from Node.js agent! ðŸŽ‰\",\n    \"user_id\": \"test_user\",\n    \"sku_id\": \"TEST-001\"\n  },\n  \"priority\": \"high\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/a2a/send",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "a2a", "send"]
            },
            "description": "Send email via A2A bridge - actually sends the email!"
          },
          "response": []
        },
        {
          "name": "Send Email (Simplified)",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{api_key}}"}],
            "url": {
              "raw": "{{base_url}}/api/v1/a2a/email?agentId={{agent_id}}&to=your.email@example.com&subject=Test&body=Hello from Node.js agent!&priority=high",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "a2a", "email"],
              "query": [
                {"key": "agentId", "value": "{{agent_id}}"},
                {"key": "to", "value": "your.email@example.com"},
                {"key": "subject", "value": "Test"},
                {"key": "body", "value": "Hello from Node.js agent!"},
                {"key": "priority", "value": "high"}
              ]
            },
            "description": "Simplified email sending"
          },
          "response": []
        },
        {
          "name": "Send OOS Notification via A2A",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{api_key}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agentId\": \"{{agent_id}}\",\n  \"targetAgent\": \"notification_agent\",\n  \"action\": \"send_oos_notification\",\n  \"payload\": {\n    \"user_id\": \"user_12345\",\n    \"user_email\": \"customer@example.com\",\n    \"sku_id\": \"LAPTOP-001\",\n    \"product_name\": \"Gaming Laptop\",\n    \"urgency\": \"high\"\n  },\n  \"priority\": \"high\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/a2a/send",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "a2a", "send"]
            }
          },
          "response": []
        },
        {
          "name": "Check Inventory via A2A",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{api_key}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agentId\": \"{{agent_id}}\",\n  \"targetAgent\": \"inventory_agent\",\n  \"action\": \"check_inventory\",\n  \"payload\": {\n    \"sku_id\": \"175\",\n    \"quantity_threshold\": 10\n  },\n  \"priority\": \"normal\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/a2a/send",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "a2a", "send"]
            }
          },
          "response": []
        },
        {
          "name": "Broadcast to All Agents",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{api_key}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agentId\": \"{{agent_id}}\",\n  \"targetAgent\": \"all\",\n  \"action\": \"broadcast\",\n  \"payload\": {\n    \"type\": \"maintenance_alert\",\n    \"message\": \"System maintenance in 30 minutes\"\n  },\n  \"priority\": \"high\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/a2a/send",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "a2a", "send"]
            }
          },
          "response": []
        },
        {
          "name": "Log A2A Event (Dashboard Only - No Email)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{api_key}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agentId\": \"{{agent_id}}\",\n  \"eventType\": \"A2A\",\n  \"data\": {\n    \"message\": \"This only logs to dashboard, does not send email\",\n    \"target_agent\": \"notification_agent\"\n  },\n  \"timestamp\": \"{{$isoTimestamp}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/events",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "events"]
            },
            "description": "This only logs - does NOT send emails. Use /api/v1/a2a/send instead"
          },
          "response": []
        }
      ]
    },
    {
      "name": "5. Test Your Agent's Capabilities (/message endpoint)",
      "description": "Use these APIs to trigger YOUR agent's business logic. Change {{agent_port}} to your agent's port (default: 8080).",
      "item": [
        {
          "name": "Trigger Agent Capability (Generic)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message_id\": \"test_msg_001\",\n  \"sender_id\": \"test_client\",\n  \"receiver_id\": \"{{agent_id}}\",\n  \"action\": \"REQUEST\",\n  \"data\": {\n    \"capability\": \"your_capability_name\",\n    \"params\": {\n      \"param1\": \"value1\",\n      \"param2\": \"value2\"\n    }\n  },\n  \"priority\": \"normal\"\n}"
            },
            "url": {
              "raw": "http://localhost:{{agent_port}}/message",
              "protocol": "http",
              "host": ["localhost"],
              "port": "{{agent_port}}",
              "path": ["message"]
            },
            "description": "Generic template to trigger any capability on your agent. Replace 'your_capability_name' with your actual capability."
          },
          "response": []
        },
        {
          "name": "Example: Product Search",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message_id\": \"test_msg_002\",\n  \"sender_id\": \"test_client\",\n  \"receiver_id\": \"{{agent_id}}\",\n  \"action\": \"REQUEST\",\n  \"data\": {\n    \"capability\": \"product_search\",\n    \"params\": {\n      \"query\": \"laptop\",\n      \"limit\": 10\n    }\n  },\n  \"priority\": \"normal\"\n}"
            },
            "url": {
              "raw": "http://localhost:{{agent_port}}/message",
              "protocol": "http",
              "host": ["localhost"],
              "port": "{{agent_port}}",
              "path": ["message"]
            },
            "description": "Example: Trigger a product search capability"
          },
          "response": []
        },
        {
          "name": "Get Agent Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:{{agent_port}}/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "{{agent_port}}",
              "path": ["health"]
            },
            "description": "Check if your agent is running and healthy"
          },
          "response": []
        }
      ]
    },
