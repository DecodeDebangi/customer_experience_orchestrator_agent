            "header": [{"key": "Authorization", "value": "Bearer {{api_key}}"}],
            "url": {
              "raw": "{{base_url}}/api/v1/agents/{{agent_id}}/logs?limit=50&offset=0",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "agents", "{{agent_id}}", "logs"],
              "query": [
                {"key": "limit", "value": "50"},
                {"key": "offset", "value": "0"}
              ]
            },
            "description": "Get all logs for your agent"
          },
          "response": []
        },
