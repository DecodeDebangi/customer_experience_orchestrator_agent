    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "2.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://192.168.15.48:8000",
      "type": "string",
      "description": "Main API server URL"
    },
    {
      "key": "dashboard_url",
      "value": "http://192.168.15.48:8888",
      "type": "string",
      "description": "Dashboard URL"
    },
    {
      "key": "api_key",
      "value": "logixal-agent-api-key-2024",
      "type": "string",
      "description": "API key for authentication"
    },
    {
      "key": "agent_id",
      "value": "my_nodejs_agent",
      "type": "string",
      "description": "Your agent ID"
    },
    {
      "key": "agent_port",
      "value": "8080",
      "type": "string",
      "description": "Your agent ID (change this to make it unique)"
    }
  ],
  "item": [
    {
      "name": "1. Agent Registration APIs",
      "item": [
        {
          "name": "Register New Agent",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{api_key}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agentId\": \"{{agent_id}}\",\n  \"agentName\": \"My Node.js Agent\",\n  \"agentType\": \"nodejs\",\n  \"version\": \"1.0.0\",\n  \"capabilities\": [\"product_search\", \"recommendation\", \"chat\"],\n  \"endpoint\": \"http://192.168.15.48:8000\",\n  \"healthCheckUrl\": \"http://192.168.15.48:8000/health\",\n  \"metadata\": {\n    \"description\": \"Node.js hackathon agent for conversational commerce\",\n    \"author\": \"Your Name\",\n    \"platform\": \"Node.js\",\n    \"runtime\": \"Node.js 18+\",\n    \"team\": \"Team Name\",\n    \"github\": \"https://github.com/yourteam/agent\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/agents/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "agents", "register"]
            },
            "description": "Register your Node.js agent with the system"
          },
          "response": []
        },
        {
          "name": "Get Agent Info",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{api_key}}"}],
            "url": {
              "raw": "{{base_url}}/api/v1/agents/{{agent_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "agents", "{{agent_id}}"]
            },
            "description": "Get detailed information about your agent"
          },
          "response": []
        },
        {
          "name": "List All Agents",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{api_key}}"}],
            "url": {
              "raw": "{{base_url}}/api/v1/agents?limit=50&offset=0",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "agents"],
              "query": [
                {"key": "limit", "value": "50"},
                {"key": "offset", "value": "0"}
              ]
            },
            "description": "List all registered agents"
          },
          "response": []
        },
        {
          "name": "Update Agent Status (Heartbeat)",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{api_key}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"healthy\",\n  \"metadata\": {\n    \"uptimeSeconds\": 3600,\n    \"messagesProcessed\": 150,\n    \"messagesSent\": 45,\n    \"errorCount\": 0\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/agents/{{agent_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "agents", "{{agent_id}}", "status"]
            },
            "description": "Update agent health status and metrics"
          },
          "response": []
        },
        {
          "name": "Update Agent Metadata/Capabilities",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{api_key}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agentName\": \"Updated Node.js Agent\",\n  \"capabilities\": [\"product_search\", \"recommendation\", \"chat\", \"ml_processing\"],\n  \"metadata\": {\n    \"description\": \"Updated Node.js agent with ML capabilities\",\n    \"author\": \"Your Name\",\n    \"platform\": \"Node.js\",\n    \"version\": \"2.0.0\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/agents/{{agent_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "agents", "{{agent_id}}"]
            },
            "description": "Update agent metadata and capabilities"
          },
          "response": []
        },
        {
          "name": "Deregister Agent",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{api_key}}"}],
            "url": {
              "raw": "{{base_url}}/api/v1/agents/{{agent_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "agents", "{{agent_id}}"]
            },
            "description": "Remove agent from the system"
          },
          "response": []
        }
      ]
    },
    {
